        <h2 class="headline-1 section-title cw-text-center">Best Products</h2>

        <ul class="grid-list">
          @foreach (var item in Model.Take(6))
          {
              var desc = descriptions[random.Next(descriptions.Length)];

              // ✅ Lấy ảnh đầu tiên, nếu không có thì dùng ảnh mặc định
              var firstImage = item.Images?.FirstOrDefault()?.Url ?? "/images/default.png";

